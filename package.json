{
    "name": "react-webpack-seed",
    "version": "1.0.0",
    "description": "React webpack started kit",
    "main": "index.js",
    "repository": "https://github.com/akilananb/react-webpack-seed.git",
    "author": "Akilan Anbalagan",
    "license": "MIT",
    "scripts": {
        "build": "./node_modules/.bin/webpack -p --config config/webpack.config.prod.js",
        "start": "node_modules/webpack-dev-server/bin/webpack-dev-server.js --config config/webpack.config.dev.js",
        "test": "jest --env=jsdom"
    },
    "dependencies": {
        "@types/react": "^16.0.35",
        "@types/react-dom": "^16.0.3",
        "babel-polyfill": "^6.26.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "styled-components": "^3.1.4"
    },
    "devDependencies": {
        "@types/jest": "^22.1.1",
        "@types/react-hot-loader": "^3.0.5",
        "@types/webpack-env": "^1.13.5",
        "autodll-webpack-plugin": "^0.3.8",
        "awesome-typescript-loader": "^3.4.1",
        "cache-loader": "^1.2.0",
        "css-loader": "^0.28.9",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "file-loader": "^1.1.6",
        "fork-ts-checker-webpack-plugin": "^0.3.0",
        "jest": "^22.1.4",
        "progress-bar-webpack-plugin": "^1.10.0",
        "react-hot-loader": "^3.1.3",
        "source-map-loader": "^0.2.3",
        "ts-jest": "^22.0.2",
        "tslint": "^5.9.1",
        "tslint-react": "^3.4.0",
        "typescript": "^2.6.2",
        "webpack": "^3.10.0",
        "webpack-dev-server": "^2.11.0"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}"
        ],
        "testMatch": [
            "<rootDir>/test/**/__tests__/**/*.ts?(x)",
            "<rootDir>/test/**/?(*.)(spec|test).ts?(x)"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
            "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
        ],
        "moduleFileExtensions": [
            "mjs",
            "web.ts",
            "ts",
            "web.tsx",
            "tsx",
            "web.js",
            "js",
            "web.jsx",
            "jsx",
            "json",
            "node"
        ],
        "moduleDirectories": [
            "node_modules"
        ]
    },
    "globals": {
        "ts-jest": {
            "tsConfigFile": "/Users/akilananbu/Documents/Timepass/my-app/tsconfig.test.json"
        }
    }
}
